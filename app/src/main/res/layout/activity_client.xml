<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listPhone"
        android:layout_width="fill_parent"
        android:layout_height="393dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_msg"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/textview_file"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:text="TextView"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/editText_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="192.168.1.34" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_client_server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="с клиента на серв" />

                <Button
                    android:id="@+id/button_server_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="с серв на клиент" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/selection"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:textSize="22sp" />

</LinearLayout>